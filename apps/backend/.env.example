# ============================================
# 校园宝 (Campus Treasure) 环境变量配置模板
# ============================================
# 复制此文件为 .env.local 并填写实际值
# 注意: 不要将 .env.local 提交到 Git

# ============= 应用配置 =============
NODE_ENV=development
# 应用运行端口
PORT=3000

# ============= 数据库配置 =============
# MongoDB 连接字符串
DATABASE_URL="mongodb://localhost:27017/xiaoyuanbao"
# 或使用 MongoDB Atlas
# DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/xiaoyuanbao?retryWrites=true&w=majority"

# Redis 配置 (可选)
REDIS_URL="redis://localhost:6379"

# ============= 认证配置 =============
# JWT 密钥 (生产环境请使用强随机字符串)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
# JWT 过期时间
JWT_EXPIRES_IN="7d"

# NextAuth 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# ============= 第三方服务 =============
# 阿里云短信
ALIYUN_SMS_ACCESS_KEY_ID=""
ALIYUN_SMS_ACCESS_KEY_SECRET=""
ALIYUN_SMS_SIGN_NAME=""
ALIYUN_SMS_TEMPLATE_CODE=""

# 阿里云 OSS 存储
ALIYUN_OSS_ACCESS_KEY_ID=""
ALIYUN_OSS_ACCESS_KEY_SECRET=""
ALIYUN_OSS_BUCKET=""
ALIYUN_OSS_REGION=""
ALIYUN_OSS_ENDPOINT=""

# 微信支付
WECHAT_APP_ID=""
WECHAT_MCH_ID=""
WECHAT_API_KEY=""
WECHAT_NOTIFY_URL=""

# 支付宝支付
ALIPAY_APP_ID=""
ALIPAY_PRIVATE_KEY=""
ALIPAY_PUBLIC_KEY=""
ALIPAY_NOTIFY_URL=""

# ============= 开发调试 =============
# 是否启用调试模式
DEBUG=false
# 日志级别: debug, info, warn, error
LOG_LEVEL=info
